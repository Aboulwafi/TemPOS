            <ToggleButton Width="40" Height="40" x:Name="button42" Grid.Row="4" Grid.Column="2" Click="Button_Click" />
            <ToggleButton Width="40" Height="40" x:Name="button43" Grid.Row="4" Grid.Column="3" Click="Button_Click" />
