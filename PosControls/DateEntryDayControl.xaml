            <ToggleButton Width="40" Height="40" x:Name="button53" Grid.Row="5" Grid.Column="3" Click="Button_Click" />
            <ToggleButton Width="40" Height="40" x:Name="button54" Grid.Row="5" Grid.Column="4" Click="Button_Click" />
            <ToggleButton Width="40" Height="40" x:Name="button55" Grid.Row="5" Grid.Column="5" Click="Button_Click" />
            <ToggleButton Width="40" Height="40" x:Name="button56" Grid.Row="5" Grid.Column="6" Click="Button_Click" />
