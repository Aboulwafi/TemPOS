<UserControl x:Class="PosControls.PushRadioButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="300" Background="Transparent">
    <StackPanel Orientation="Horizontal" Background="Transparent">
        <Grid Width="50">
            <Ellipse Name="borderEllipseControl" Width="50" SizeChanged="Ellipse_SizeChanged"/>
            <Ellipse Name="ellipseControl" Width="48" PreviewMouseDown="ellipseControl_PreviewMouseDown" />
        </Grid>
        <Label Name="labelControl" Margin="10,5,0,5" Visibility="Collapsed" />
        <TextBlock Name="textBlockControl" Margin="10,5,0,5" TextWrapping="Wrap" />
    </StackPanel>
</UserControl>
