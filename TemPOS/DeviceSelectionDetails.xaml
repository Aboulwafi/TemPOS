<UserControl x:Class="TemPOS.DeviceSelectionDetails"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:my="clr-namespace:TemPOS"
             xmlns:ctrl="clr-namespace:PosControls;assembly=PosControls"
             mc:Ignorable="d" 
             d:DesignHeight="660" d:DesignWidth="945">
    <DockPanel LastChildFill="True" Name="mainPane">
        <ctrl:ConfigurationManager x:Name="Configuration" />
        <Grid>
            <Grid.Background>
                <Binding ElementName="Configuration" Path="BindableControlBackgroundBrush" />
            </Grid.Background>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="304*" />
                <ColumnDefinition Width="530*" />
            </Grid.ColumnDefinitions>
            <Border />
            <Border Grid.Column="2" />
            <ctrl:DragScrollListBox x:Name="listBoxDevices" SelectionChanged="listBoxDevices_SelectionChanged" />
            <my:DeviceChoiceControl x:Name="choiceControl" Grid.Column="1" Visibility="Hidden" />
        </Grid>
    </DockPanel>
</UserControl>
